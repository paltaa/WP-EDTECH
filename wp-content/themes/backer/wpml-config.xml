<wpml-config>
    <custom-fields>
        <custom-field action="ignore">krown_idp_featured</custom-field>
        <custom-field action="ignore">krown_page_layout</custom-field>
        <custom-field action="ignore">krown_sidebar_set</custom-field>
        <custom-field action="ignore">krown_page_style</custom-field>
        <custom-field action="ignore">krown_custom_header_set</custom-field>
        <custom-field action="ignore">krown_custom_header_height</custom-field>
        <custom-field action="ignore">krown_custom_header_img</custom-field>
        <custom-field action="ignore">krown_custom_header_slider</custom-field>
        <custom-field action="ignore">krown_show_map</custom-field>
        <custom-field action="ignore">krown_map_zoom</custom-field>
        <custom-field action="ignore">krown_map_style</custom-field>
        <custom-field action="ignore">krown_map_lat</custom-field>
        <custom-field action="ignore">krown_map_long</custom-field>
        <custom-field action="ignore">krown_map_marker</custom-field>
        <custom-field action="ignore">krown_map_img</custom-field>
        <custom-field action="translate">krown_page_subtitle</custom-field>
        <custom-field action="translate">krown_custom_header_cta</custom-field>
    </custom-fields>
    <custom-types>
        <custom-type translate="1">ignition_product</custom-type>
    </custom-types>   
    <language-switcher-settings>
        <key name="icl_lang_sel_config">
            <key name="font-current-normal">#444444</key>
            <key name="font-current-hover">#000000</key>
            <key name="background-current-normal">#ffffff</key>
            <key name="background-current-hover">#eeeeee</key>
            <key name="font-other-normal">#444444</key>
            <key name="font-other-hover">#000000</key>
            <key name="background-other-normal">#ffffff</key>
            <key name="background-other-hover">#eeeeee</key>
            <key name="border">#cdcdcd</key>
        </key>
        <key name="icl_lang_sel_footer_config">
            <key name="font-current-normal">#444444</key>
            <key name="font-current-hover">#000000</key>
            <key name="background-current-normal">#ffffff</key>
            <key name="background-current-hover">#eeeeee</key>
            <key name="font-other-normal">#444444</key>
            <key name="font-other-hover">#000000</key>
            <key name="background-other-normal">#ffffff</key>
            <key name="background-other-hover">#eeeeee</key>
            <key name="border">#cdcdcd</key>
        </key>    
        <key name="icl_language_switcher_sidebar">0</key>  
        <key name="icl_widget_title_show">0</key>
        <key name="icl_lang_sel_type">dropdown</key>
        <key name="icl_lso_link_empty">0</key>
        <key name="icl_lso_flags">0</key>
        <key name="icl_lso_native_lang">1</key>
        <key name="icl_lso_display_lang">1</key>
        <key name="icl_lang_sel_footer">0</key>
        <key name="icl_post_availability">0</key>
        <key name="icl_post_availability_position">below</key>
        <key name="icl_post_availability_text">This post is also available in: %s</key>    
    </language-switcher-settings>    
</wpml-config>